<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ini_tanda_plus"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="@android:color/black" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/ic_add"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_baseline_dehaze_24"
        app:tint="@android:color/black" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/ic_add"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:tint="@android:color/black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_add"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@id/userImage">

        <TableRow
            android:padding="2dp"
            >
            <TextView
                style="@style/TableRow"
                android:text="15" />

            <TextView
                style="@style/TableRow"
                android:text="12" />

            <TextView
                style="@style/TableRow"
                android:text="2020" />
        </TableRow>
        <TableRow>
            <TextView
                style="@style/TableRow2"
                android:text="Posts" />

            <TextView
                style="@style/TableRow2"
                android:text="Followers" />

            <TextView
                style="@style/TableRow2"
                android:text="Following" />
        </TableRow>
    </TableLayout>
    <TextView
        style="@style/TableRow"
        android:layout_below="@id/userImage"
        android:text="Nama User"
        android:id="@+id/namaUser"
        />
    <TextView
        style="@style/TableRow2"
        android:text="Biodata User"
        android:layout_below="@id/namaUser"
        android:id="@+id/biodataUser"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/biodataUser"
        android:layout_marginTop="20dp"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:id="@+id/editProfileButton"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_grid_on_24"
        android:layout_below="@id/editProfileButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:tint="@android:color/black"
        android:id="@+id/grid_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/grid_icon"
        android:layout_marginTop="4dp"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image1"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image2"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/image3"
            />

    </LinearLayout>
</RelativeLayout>